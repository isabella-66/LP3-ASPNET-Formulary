@{
    ViewData["Title"] = "First Formulary";
}

<div class="text-center">
    <h1 class="display-4">Formulário de Cadastro</h1><br>
    <p>Utilize o formulário para realizar a sua inscrição.</p>

    <form action="FormDataTest" method="post">
        <label for="name">Nome Completo</label>
        <input type="text" name="name" id="name" pattern="^[^-\s][a-zA-ZÀ-ú ]{2,250}$" required><br><br>
        <label for="email">E-mail</label>
        <input type="text" name="email" id="email" required><br><br>
        <label for="password">Senha</label>
        <input type="text" name="password" id="password" required><br><br>
        <button type="submit">Enviar</button>
    </form>
</div>
